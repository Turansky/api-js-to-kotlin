<idea-plugin>
    <id>com.github.turansky.yfiles</id>
    <name>yFiles</name>
    <vendor url="https://github.com/turansky">Victor Turansky</vendor>

    <!-- language=HTML -->
    <description>
        <![CDATA[
        yFiles class framework helper

        <h3>Supported platforms</h3>
        <ul>
            <li>Kotlin/JS</li>
        </ul>

        <h3>About yFiles</h3>
        <a href="https://www.yworks.com/products/yfiles-for-html">yFiles for HTML</a><br>
        <a href="https://docs.yworks.com/yfileshtml/#/dguide/yfiles_class_framework">yFiles class framework</a><br>

        <h3>yFiles & Kotlin/JS</h3>
        <a href="https://github.com/turansky/yfiles-kotlin">Kotlin/JS declarations</a><br>
        <a href="https://github.com/turansky/yfiles-kotlin/tree/master/gradle-plugin">Gradle plugin</a><br>
        ]]>
    </description>

    <!-- language=HTML -->
    <change-notes>
        <![CDATA[
        Add inheritance inspection
        <br>
        <a href="https://github.com/turansky/yfiles-kotlin">More information</a>
        ]]>
    </change-notes>

    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.gradle</depends>
    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="com.intellij">
        <localInspection language="kotlin"
            displayName="Inheritance inspection"
            groupName="yFiles"
            enabledByDefault="true"
            implementationClass="com.github.turansky.yfiles.ide.InheritanceInspection"/>
    </extensions>
</idea-plugin>
