<idea-plugin>
    <id>com.github.turansky.yfiles</id>
    <name>yFiles</name>
    <vendor url="https://github.com/turansky">Victor Turansky</vendor>

    <!-- language=HTML -->
    <description>
        <![CDATA[
        <p>yFiles class framework helper for Kotlin/JS.<br>Check yFiles inheritance rules on the fly.</p>

        <ul>
            <li><a href="https://github.com/turansky/yfiles-kotlin">yFiles Kotlin/JS declarations</a></li>
            <li><a href="https://github.com/turansky/yfiles-kotlin/tree/master/gradle-plugin">yFiles Gradle plugin</a></li>
            <li><a href="https://docs.yworks.com/yfileshtml/#/dguide/yfiles_class_framework">yFiles Class Framework</a></li>
            <ul>
        ]]>
    </description>

    <!-- language=HTML -->
    <change-notes>
        <![CDATA[
        Add inheritance inspection
        <br>
        <a href="https://github.com/turansky/yfiles-kotlin">More information</a>
        ]]>
    </change-notes>

    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.gradle</depends>
    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="com.intellij">
        <localInspection language="kotlin"
            displayName="Inheritance inspection"
            groupPath="yFiles"
            groupName="Kotlin/JS"
            enabledByDefault="true"
            implementationClass="com.github.turansky.yfiles.ide.InheritanceInspection"/>
    </extensions>
</idea-plugin>
